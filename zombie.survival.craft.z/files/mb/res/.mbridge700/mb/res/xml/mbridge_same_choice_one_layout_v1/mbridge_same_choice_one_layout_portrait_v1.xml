<?xml version="1.0" encoding="utf-8"?>
<com.mbridge.msdk.dycreator.baseview.extview.MBExtFrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mbridge_choice_frl"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp"
        android:layout_gravity="center"
        >

        <RelativeLayout
            android:id="@+id/mbridge_top_item_rl"
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="1"
            android:gravity="center">

            <com.mbridge.msdk.dycreator.baseview.extview.MBExtMBRotationView
                android:id="@+id/mbridge_top_ration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <com.mbridge.msdk.dycreator.baseview.extview.MBExtMBridgeImageView
                    android:id="@+id/mbridge_top_iv"
                    android:layout_width="match_parent"
                    android:layout_height="190dip"
                    android:scaleType="fitXY"
                    android:topLeftRadius="10dp"
                    android:topRightRadius="10dp"
                    />


            </com.mbridge.msdk.dycreator.baseview.extview.MBExtMBRotationView>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_alignTop="@+id/mbridge_top_ration"
                android:layout_alignBottom="@+id/mbridge_top_ration">

                <ImageView
                    android:id="@+id/mbridge_top_play_bg"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/mbridge_icon_play_bg" />

                <ImageView
                    android:id="@+id/mbridge_top_finger_bg"
                    android:layout_width="60dp"
                    android:layout_height="75dp"
                    android:layout_alignLeft="@+id/mbridge_top_play_bg"
                    android:layout_alignTop="@+id/mbridge_top_play_bg"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="18dp"
                    android:src="@drawable/mbridge_finger_media_control" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_alignParentBottom="true"
                    android:src="@drawable/mbridge_bottom_media_control" />
            </RelativeLayout>

            <TextView
                android:id="@+id/mbridge_top_title_tv"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_below="@+id/mbridge_top_ration"
                android:background="@drawable/mbridge_reward_shape_choice"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:lines="1"
                android:paddingLeft="45dp"
                android:textColor="#FFFFFFFF"
                android:textSize="15sp"
                android:textStyle="bold" />

            <com.mbridge.msdk.dycreator.baseview.cusview.MBCusRoundImageView
                android:id="@+id/mbridge_top_icon_iv"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_below="@+id/mbridge_top_ration"
                android:layout_margin="5dp"
                android:scaleType="centerCrop" />


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/mbridge_bottom_item_rl"
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_marginTop="55dp"
            android:layout_weight="1"
            android:gravity="center">

            <com.mbridge.msdk.dycreator.baseview.extview.MBExtMBRotationView
                android:id="@+id/mbridge_bottom_ration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.mbridge.msdk.dycreator.baseview.extview.MBExtMBridgeImageView
                    android:id="@+id/mbridge_bottom_iv"
                    android:layout_width="match_parent"
                    android:layout_height="190dip"
                    android:scaleType="fitXY" />

            </com.mbridge.msdk.dycreator.baseview.extview.MBExtMBRotationView>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_alignTop="@+id/mbridge_bottom_ration"
                android:layout_alignBottom="@+id/mbridge_bottom_ration">

                <ImageView
                    android:id="@+id/mbridge_bottom_play_bg"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/mbridge_icon_play_bg" />

                <ImageView
                    android:id="@+id/mbridge_bottom_finger_bg"
                    android:layout_width="60dp"
                    android:layout_height="75dp"
                    android:layout_alignLeft="@+id/mbridge_bottom_play_bg"
                    android:layout_alignTop="@+id/mbridge_bottom_play_bg"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="18dp"
                    android:src="@drawable/mbridge_finger_media_control" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_alignParentBottom="true"
                    android:src="@drawable/mbridge_bottom_media_control" />
            </RelativeLayout>

            <TextView
                android:id="@+id/mbridge_bottom_title_tv"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_below="@+id/mbridge_bottom_ration"
                android:background="@drawable/mbridge_reward_shape_choice"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:lines="1"
                android:paddingLeft="45dp"
                android:textColor="#FFFFFFFF"
                android:textSize="15sp"
                android:textStyle="bold" />

            <com.mbridge.msdk.dycreator.baseview.cusview.MBCusRoundImageView
                android:id="@+id/mbridge_bottom_icon_iv"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_below="@+id/mbridge_bottom_ration"
                android:layout_margin="5dp"
                android:scaleType="centerCrop" />
        </RelativeLayout>

    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <ImageView
            android:id="@+id/mbridge_reward_choice_one_like_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="30dp"
            android:src="@drawable/mbridge_reward_two_title_zh" />
    </FrameLayout>

    <TextView
        android:id="@+id/mbridge_choice_one_countdown_tv"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_gravity="right"
        android:layout_margin="10dp"
        android:gravity="center"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textSize="11sp"
        android:visibility="gone" />

</com.mbridge.msdk.dycreator.baseview.extview.MBExtFrameLayout>